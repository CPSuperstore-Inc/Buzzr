{% extends "base.twig" %}
{% block title %}Contol Device{% endblock %}
{% block body %}
    <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <br>
        <a href="/cont/start" class="btn btn-primary">Start</a>
        <a href="/cont/stop" class="btn btn-danger">Stop</a>
        <a href="/cont" class="btn btn-success">Refresh</a>
        <br>
        Status: {% if running %}<span style="color:green">Running</span>{% else %}<span style="color:red">Stopped</span>{% endif %}
        <h3>Entries</h3>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Response Time</th>
                </tr>
            </thead>
            <tbody>
                {% for n, t in names %}
                <tr>
                    <td scope="col">{{ n }}</td>
                    <td scope="col">{{ t }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
      </div>
    </div>
  </div>
    <script type="text/javascript">
        Vue.component('modal', {
            template: '#modal-template'
        })
    
        var app = new Vue({
            el: '#app',
            delimiters: ["${","}"],
            data: {
                test: "works"
            },
            methods: {
            }
        })
    </script>
{% endblock %}
{% block foot %}{% endblock %}
